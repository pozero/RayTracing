layout(constant_id = 0) const uint SPHERE_COUNT = 1;

layout(constant_id = 1) const uint GRID_ALONG_X_AXIS = 1;

layout(constant_id = 2) const uint GRID_ALONG_Y_AXIS = 1;

layout(constant_id = 3) const uint GRID_ALONG_Z_AXIS = 1;


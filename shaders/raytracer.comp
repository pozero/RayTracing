float reflectance(const in float cosine, 
                  const in float refraction_ratio) {
    // Use Schlick's approximation for reflectance.
    float r0 = (1 - refraction_ratio) / (1 + refraction_ratio);
    r0 = r0 * r0;
    return r0 + (1 - r0) * 
                (1 - cosine) *
                (1 - cosine) *
                (1 - cosine) *
                (1 - cosine) *
                (1 - cosine);
}

vec3 scatter(inout ray_t ray,
             const in hit_record_t hit_record) {
    switch (hit_record.material.type) {
        case MATERIAL_LAMBERTIAN:
            ray.origin = hit_record.point;
            ray.direction = normalize(hit_record.normal + 
                                      rand_vector_on_unit_sphere(hit_record.point.xy,
                                                                 hit_record.point.xz));
            if (near_zero(ray.direction)) {
                ray.direction = hit_record.normal;
            }
            return hit_record.material.albedo.xyz;
        case MATERIAL_METAL:
            ray.origin = hit_record.point;
            const vec3 reflected = reflect(ray.direction, hit_record.normal) + 
                                   hit_record.material.fuzz *
                                       rand_vector_on_unit_sphere(hit_record.point.xy,
                                                                 hit_record.point.xz);
            ray.direction = reflected;
            return hit_record.material.albedo.xyz;
        case MATERIAL_DIELECTRIC:
            ray.origin = hit_record.point;
            const float refraction_ratio = hit_record.front_face ? 
                1.0 / hit_record.material.refraction_index :
                hit_record.material.refraction_index;
            const float cos_theta = min(dot(-ray.direction, hit_record.normal), 1.0);
            const float sin_theta = sqrt(1 - cos_theta * cos_theta);
            if (refraction_ratio * sin_theta > 1.0 ||
                reflectance(cos_theta, refraction_ratio) > rand_01(hit_record.point.xy)) {
                ray.direction = reflect(ray.direction, hit_record.normal);
            } else {
                ray.direction = refract(ray.direction, 
                                        hit_record.normal, 
                                        refraction_ratio);
            }
            return vec3(1.0, 1.0, 1.0);
    }
}

vec3 brute_force_ray_tracing(in ray_t ray) {
    vec3 destination_color = vec3(0.0, 0.0, 0.0);
    vec3 accumulated_attenuation = vec3(1.0, 1.0, 1.0);
    #pragma optionNV (unroll all)
    for (int iter = 0; iter < RAY_BOUNCE_MAX_COUNT; ++ iter) {
        const float t_min = 0.001;
        float t_max = 1.0 / 0.0;
        hit_record_t hit_record = empty_hit_record();
        bool hit_anything = false;
        #pragma optionNV (unroll all)
        for (int sphere_idx = 0; sphere_idx < SPHERE_COUNT; ++ sphere_idx) {
            if (hit_sphere(spheres[sphere_idx], ray, t_min, t_max, hit_record)) {
                t_max = hit_record.t;
                hit_anything = true;
            }
        }
        if (hit_anything) {
            const vec3 attenuation = scatter(ray, hit_record);
            accumulated_attenuation = attenuation * accumulated_attenuation;
        } else {
            const vec3 sky_color = gradient_background(vec3(0.5, 0.7, 1.0), 
                                                       vec3(1.0, 1.0, 1.0),
                                                       ray);
            destination_color += accumulated_attenuation * sky_color;
            break;
        }
    }
    return destination_color;
}

vec3 ddd_dda_ray_tracing(in ray_t ray) {
    float world_t_min = 0.0001;
    float world_t_max = 1.0 / 0.0;
    if (!hit_aabb(world_aabb, ray, world_t_min, world_t_max)) {
        const vec3 sky_color = gradient_background(vec3(0.5, 0.7, 1.0), 
                                                   vec3(1.0, 1.0, 1.0),
                                                   ray);
        return sky_color;
    }
    vec3 destination_color = vec3(0.0, 0.0, 0.0);
    vec3 accumulated_attenuation = vec3(1.0, 1.0, 1.0);
    world_t_min += 1e-3;
    vec3 cur_pos = ray_at(ray, world_t_min);
    ivec3 cur_grid = world2grid(uniform_grid, cur_pos);
    ray.origin = cur_pos;
    #pragma optionNV (unroll all)
    for (int iter = 0; iter < RAY_BOUNCE_MAX_COUNT; ++ iter) {
        const vec3 inv_diretion = vec3(1.0) / ray.direction;
        const ivec3 ray_direction_positive = ivec3(ray.direction.x > 0.0, 
                                                   ray.direction.y > 0.0,
                                                   ray.direction.z > 0.0);
        const vec3 t_delta = uniform_grid.grid_size * inv_diretion;
        bool reach_boundary = false;
        bool hit_anything = false;
        hit_record_t hit_record = empty_hit_record();
        while (!reach_boundary && !hit_anything) {
            const uint grid_id = flatten_grid_coord(cur_grid);
            const float t_min = 0.01;
            float t_max = 1.0 / 0.0;
            for (uint sphere_idx_idx = geometry_in_grid_start[grid_id];
                 sphere_idx_idx < geometry_in_grid_start[grid_id + 1];
                 ++ sphere_idx_idx) {
                    const uint sphere_idx = intersection_sphere_id[sphere_idx_idx];
                    if (hit_sphere(spheres[sphere_idx], ray, t_min, t_max, hit_record)) {
                        t_max = hit_record.t;
                        hit_anything = true;
                    }
            }

            const ivec3 next_grid = cur_grid + ray_direction_positive;
            const vec3 t_proceed = (grid2world(uniform_grid, next_grid) - cur_pos) * inv_diretion;
            const ivec3 grid_step = 2 * ray_direction_positive - ivec3(1);
            const ivec3 grid_boundary = ray_direction_positive * ivec3(GRID_ALONG_X_AXIS,
                                                                       GRID_ALONG_Y_AXIS,
                                                                       GRID_ALONG_Z_AXIS) +
                                        (1 - ray_direction_positive) * ivec3(-1);
            const bool x_less_than_y = t_proceed.x < t_proceed.y;
            const bool x_less_than_z = t_proceed.x < t_proceed.z;
            const bool y_less_than_z = t_proceed.y < t_proceed.z;
            const bool x_smallest = x_less_than_y && x_less_than_z;
            const bool y_smallest = !x_less_than_y && y_less_than_z;
            const bool z_smallest = ( x_less_than_y && !x_less_than_z) ||
                                    (!x_less_than_y && !y_less_than_z);
            const int selected_field = 0 * int(x_smallest) + 1 * int(y_smallest) + 2 * int(z_smallest);
            cur_grid[selected_field] += grid_step[selected_field];
            reach_boundary = cur_grid[selected_field] == grid_boundary[selected_field];
            cur_pos = ray_at(ray, t_proceed[selected_field] + 1e-3);
            ray.origin = cur_pos;
        }

        if (hit_anything) {
            const vec3 attenuation = scatter(ray, hit_record);
            accumulated_attenuation = attenuation * accumulated_attenuation;
            cur_pos = hit_record.point;
            cur_grid = world2grid(uniform_grid, cur_pos);
        } else {
            const vec3 sky_color = gradient_background(vec3(0.5, 0.7, 1.0), 
                                                       vec3(1.0, 1.0, 1.0),
                                                       ray);
            destination_color += accumulated_attenuation * sky_color;
            break;
        }
    }
    return destination_color;
}
